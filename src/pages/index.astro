---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";
import Badge from "../components/Badge.astro";
---

<Layout title="Welcome to Astro.">
  <main>
    <section class="w-full lg:w-[740px] mx-auto py-44">
      <img
        class="rounded-full w-12 h-12 mb-4"
        src="https://avatars.githubusercontent.com/u/88031305?v=4"
        alt="gambalongadev photo"
      />
      <h1 class="text-white text-4xl font-bold flex flex-row gap-x-4 pb-4">
        Hey, soy GambalongaDev<a
          href="https://www.linkedin.com/in/raul-gambalonga/"
          target="_blank"
          rel="noopener"
          class="flex justify-center items-center"
        >
          <Badge>Disponible para trabajar</Badge>
        </a>
      </h1>
      <h2 class="text-white text-2xl opacity-80 text-wrap">
        + 1 año de experiencia, desarrollador web. De Madrid, España 🌐 Me
        especializo en Fronted con react
      </h2>
      <ul></ul>
    </section>
  </main>
</Layout>
