---
const PROJECTS = [
  {
    title: "GifExpertApp",
    description: "Una app de busqueda de gifs ",
    link: "https://raulgambalonga.github.io/gift-expert2-app/",
    github: "https://github.com/RaulGamBalonga/gift-expert2-app",
    image: "/public/projects/gifExpertApp.webp",
    tags: ["HTML", "CSS", "JavaScript","React"],
  },
];
---

{
  PROJECTS.map(({ image, title, description, tags }) => (
    <article>
      <h3 class="text-2xl font-semibold text-yellow-200">{title}</h3>
      <p class="text-lg mb-4 text-pretty">{description}</p>
      <ul>
        {tags.map((tag) => (
          <li>{tag}</li>
        ))}
      </ul>
      <img
        class="rounded shadow-2xl shadow-white/10"
        src={image}
        alt={`Captura de pantalla del proyecto ${image}`}
      />
    </article>
  ))
}
